{
  "name": "self-care-dashboard",
  "version": "1.0.0",
  "description": "Digital Nomad Self-Care Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "build:css": "npx tailwindcss -i ./styles.css -o ./dist/styles.css",
    "build:all": "npm run build:css && npm run build",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "self-care",
    "productivity",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.yourname.selfcaredashboard",
    "productName": "Self-Care Dashboard",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
